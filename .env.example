# Copy this file to .env.local and fill the values
# Used by app/api/webhook/route.ts for webhook verification
VERIFY_TOKEN=your_webhook_verify_token

# Used by app/api/send-template/route.ts for sending WhatsApp template messages
# If SIMULATION_MODE=true, no real requests are made to Meta Graph API
SIMULATION_MODE=true
WHATSAPP_TOKEN=your_meta_whatsapp_access_token
PHONE_NUMBER_ID=your_meta_phone_number_id

# Optional but recommended
# Used to verify X-Hub-Signature-256 for webhook POST requests (security)
APP_SECRET=your_meta_app_secret

# Optional: Your WhatsApp Business Account ID (useful for template management endpoints)
WABA_ID=your_whatsapp_business_account_id

# Public base URL of your deployment (used when configuring the webhook)
# Example: https://testlherm.vercel.app
BASE_URL=
